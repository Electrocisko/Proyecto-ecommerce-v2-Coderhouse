<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs')  %> 
</head>
<body class="container">
    <header>
     <%- include('../partials/navbar.ejs') %>
    </header>
    <main>
        <h1>Administre los productos</h1>

        <h1>Ingrese su producto</h1>
        <div class="container">
           <form id="productForm">
              <label class="form-label">Producto</label>
              <input id="name" name="name" class="form-control">
        
              <label class="form-label">Descripcion</label>
              <input id="description" name="description" class="form-control">
        
              <label class="form-label">Categoria</label>
              <input id="category" name="category" class="form-control">
        
            
              <label class="form-label">Precio</label>
              <input id="price" name="price" class="form-control">
        
              <label class="form-label">Stock</label>
              <input id="stock" name="stock" class="form-control">
        
              <br>
              <input id="thumbnail" type="file" name="thumbnail" class="form-control">
              <br>
              <input type="submit" class="btn btn-primary">
           </form>
        </div>
        <br>
        <a href="/api/products" class="fs-3"> Ver Productos</a>
        <br>
        
        
        <script src="js/enterProduct.js"></script>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>